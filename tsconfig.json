{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "baseUrl": "./",
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "typeRoots": ["./src/@types"],
    },
    "include": [
        "src/**/*"
, "routes/v1"    ],
    "exclude": [
        "node_modules"
    ]
}